@model N00695523cumulativePartOne.Models.Teacher


@{
    ViewBag.Title = "DeleteConfirm";
    <script src="https://kit.fontawesome.com/6be63762e1.js" crossorigin="anonymous"></script>
    <!--Just to add some Icons-->
    @Styles.Render("~/Content/Site.css")
    <!--Call to the CSS we are using for this page.-->
}

<h2>Confirm Delete</h2>

<div id="containershow">
    <h2>Are you sure you want to delete @Model.TeacherFirstName @Model.TeacherLastName?</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/Teacher/Delete/@Model.TeacherId">
        <button class="delbutton">
            Confirm Delete
        </button>
    </form>
    <a class="cancelOption" href="/Teacher/Show/@Model.TeacherId"><i class="fas fa-times-circle"></i> Cancel</a>

</div>