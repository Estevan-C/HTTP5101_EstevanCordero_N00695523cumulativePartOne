@model N00695523cumulativePartOne.Models.Teacher

@{
    ViewBag.Title = "Update";
    @Styles.Render("~/Content/Site.css")
    <!--Call to the CSS we are using for this page.-->
    <script src="https://kit.fontawesome.com/6be63762e1.js" crossorigin="anonymous"></script>
    <!--Just to add some Icons-->
}

<div id="containershow">
    <nav>
        <a class="listOption" href="/Teacher/List"><i class="fas fa-chalkboard-teacher"></i> Back to Teachers List</a>
    </nav>
    <h2>Update Teacher</h2>
    <form method="POST" action="/Teacher/Update/@Model.TeacherId">
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFirstName" />
        </div>
        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLastName" />
        </div>
        <div class="inputrow">
            <label for="TeacherEmployeeNumber">Employee Number:</label>
            <input type="text" id="TeacherEmployeeNumber" name="TeacherEmployeeNumber" value="@Model.EmployeeNumber" />
        </div>
        <div class="inputrow">
            <label for="TeacherHireDate">Hire Date:</label>
            <div>
                <input type="date" id="TeacherHireDate" name="TeacherHireDate" value="@Model.HireDate" />
            </div>
        </div>
        <div class="inputrow">
            <label for="TeacherSalary">Salary:</label>
            <div>
                <input type="number" id="TeacherSalary" name="TeacherSalary" value="@Model.Salary" />
            </div>
        </div>
        <div class="inputrow">
            <input type="submit" value="Update Teacher" />
        </div>
    </form>
</div>

